<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/Innova.css" rel="stylesheet" />
    <link href="~/Content/Dimaticons/dimaticons.css" rel="stylesheet" />

</head>
<body>
    <div class="container body-content">
        <div id="promptMessage" class="inputNoVisto">
            <img src="~/Content/img/spinloading.gif" />
        </div>
        @RenderBody()
        
    </div>
   
    
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        document.addEventListener('contextmenu', event => event.preventDefault());
        function showLoading() {

            document.getElementById("promptMessage").classList.remove("inputNoVisto");
        }
        function endLoading() {

            document.getElementById("promptMessage").classList.add("inputNoVisto");
        }
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
